<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    Base application theme.
    You can set styles for widgets, etc., across an app/activity from a theme.
    -->
    <style name="Theme.Game2048" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <!-- Theme for a specific screen -->
    <style name="MainUI" parent="Theme.Game2048">
       <item name="android:windowBackground">@color/dark_lightgreen_a100</item>
    </style>

    <style name="Game2048Buttons" parent="@android:style/Widget.Holo.Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TODO put common text attributes here; do same for other widgets -->
    <style name="Game2048Text" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="Game2048FAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/secondary</item>
    </style>
</resources>